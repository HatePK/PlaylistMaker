<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">@dimen/zero_letter_space</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_dp_value</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/main_menu_button_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/button_text_color</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="cornerRadius">@dimen/main_menu_button_corner_radius</item>
    </style>

    <style name="ButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_menu_button_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/settings_menu_button_padding_right</item>
    </style>
    <style name="SwitchButton">
        <item name="android:textColor">@color/button_text_color</item>
    </style>
    <style name="ButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/second_menu_button_text_color</item>
        <item name="android:textSize">@dimen/settings_menu_button_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ButtonIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>
    <style name="HeaderButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/second_menu_button_text_color</item>
        <item name="iconTint">@color/second_menu_button_text_color</item>
        <item name="android:layout_height">@dimen/header_button_height</item>
        <item name="iconPadding">@dimen/header_button_icon_padding</item>
        <item name="android:paddingLeft">@dimen/header_button_padding_left</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="ClearSearchButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/search_clean_hint_color</item>
    </style>
    <style name="Search_input" >
        <item name="background">@drawable/rounded_edittext</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textColorHint">@color/search_clean_hint_color</item>
        <item name="android:drawableTint">@color/search_clean_hint_color</item>
    </style>
</resources>