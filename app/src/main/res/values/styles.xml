<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">@dimen/zero_letter_space</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_dp_value</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/main_menu_button_text_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/button_text_color</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="cornerRadius">@dimen/main_menu_button_corner_radius</item>
    </style>

    <style name="ButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_menu_button_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/settings_menu_button_padding_right</item>
    </style>
    <style name="SwitchButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_menu_button_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">@dimen/settings_menu_button_padding_right</item>
        <item name="trackTint">@color/switch_color_track_light</item>
        <item name="thumbTint">@color/switch_color_thumb_light</item>
    </style>
    <style name="ButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/second_menu_button_text_color</item>
        <item name="android:textSize">@dimen/settings_menu_button_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ButtonIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>
    <style name="HeaderContainer">
        <item name="android:layout_height">@dimen/header_container_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/header_container_padding</item>
    </style>
    <style name="HeaderButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="icon">@drawable/back</item>
        <item name="iconTint">@color/second_menu_button_text_color</item>
        <item name="android:layout_height">@dimen/header_button_height</item>
        <item name="android:layout_width">@dimen/header_button_width</item>
        <item name="iconPadding">@dimen/header_button_icon_padding</item>
        <item name="iconGravity">textStart</item>
    </style>
    <style name="HeaderText">
        <item name="android:textColor">@color/second_menu_button_text_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginLeft">@dimen/header_margin_start</item>
    </style>
    <style name="ClearSearchButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/search_clean_hint_color</item>
    </style>
    <style name="Search_input" >
        <item name="background">@drawable/rounded_edittext</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textColorHint">@color/search_clean_hint_color</item>
        <item name="android:drawableTint">@color/search_clean_hint_color</item>
    </style>
    <style name="TrackContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="TrackItemHeader" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/search_menu_button_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/second_menu_button_text_color</item>
    </style>
    <style name="TrackItemDescription" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/track_item_secondary_line_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/search_clean_hint_color</item>
    </style>
    <style name="TrackItemIcon" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="ErrorImage">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/empty_result</item>
    </style>
    <style name="ErrorText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/main_background_dark</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="BlackButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">@dimen/zero_letter_space</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/search_history_element_margin_top</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/main_background_dark</item>
        <item name="android:textSize">@dimen/search_history_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
    </style>

    <style name="media_background">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="media_back_button">
        <item name="android:layout_width">@dimen/header_button_width</item>
        <item name="android:layout_height">@dimen/header_button_height</item>
        <item name="android:layout_marginStart">@dimen/media_back_button_margins</item>
        <item name="android:layout_marginTop">@dimen/media_back_button_margins</item>
        <item name="android:background">@null</item>
    </style>

    <style name="media_play_button">
        <item name="android:layout_width">@dimen/media_play_button_side</item>
        <item name="android:layout_height">@dimen/media_play_button_side</item>
        <item name="android:layout_marginTop">@dimen/media_play_button_margin_top</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="media_additional_button">
        <item name="android:layout_width">@dimen/media_additional_button_side</item>
        <item name="android:layout_height">@dimen/media_additional_button_side</item>
        <item name="android:layout_marginTop">@dimen/media_additional_button_margin_top</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="media_track_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/media_track_name_margin_top</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/media_track_name_font_size</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="media_track_author">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/media_track_author_margin_top</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/media_track_author_font_size</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="media_track_timer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/media_timer_margin_top</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/media_timer_font_size</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="media_info_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/media_info_header_padding_top</item>
        <item name="android:paddingBottom">@dimen/media_info_header_padding_bottom</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/media_info_font_size</item>
        <item name="android:textColor">@color/search_clean_hint_color</item>
    </style>

    <style name="media_info_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/media_info_font_size</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="library_tab_layout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_layout_height</item>
        <item name="android:background">@color/white</item>
        <item name="tabIndicatorColor">@color/black_text_color</item>
        <item name="tabTextColor">@color/black_text_color</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">@dimen/tab_layout_indicator_height</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>

    <style name="library_view_pager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="bottom_navigation">
        <item name="itemIconTint">@color/color_selector</item>
        <item name="itemTextColor">@color/color_selector</item>
        <item name="backgroundTint">@color/white</item>
        <item name="itemActiveIndicatorStyle">@color/white</item>
    </style>

    <style name="app_color">
        <item name="android:background">@color/white</item>
    </style>

    <style name="playlist_name" >
        <item name="android:layout_marginTop">@dimen/playlist_name_margin_top</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/playlist_text_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="playlist_description" >
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/playlist_text_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="bottom_sheet_header" >
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/bottom_sheet_header_padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_header_margin_top</item>
        <item name="android:textSize">@dimen/bottom_sheet_header_font_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="playlist_screen">
        <item name="android:background">@color/playlist_screen_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="playlist_screen_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/playlist_screen_name_margin_top</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/playlist_screen_name_font_size</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="playlist_screen_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">@dimen/playlist_screen_description_margin_top</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/playlist_screen_description_font_size</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="playlist_screen_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/playlist_screen_description_font_size</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="playlist_back_button">
        <item name="android:layout_width">@dimen/header_button_width</item>
        <item name="android:layout_height">@dimen/header_button_height</item>
        <item name="android:layout_marginStart">@dimen/media_back_button_margins</item>
        <item name="android:layout_marginTop">@dimen/media_back_button_margins</item>
        <item name="android:background">@null</item>
    </style>

    <style name="playlist_placeholder_message">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/favourites_placeholder_message_margin_top</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/playlist_placeholder_message_font_size</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="playlist_bottom_sheet_menu_button">
        <item name="android:paddingHorizontal">@dimen/playlist_bottom_menu_button_padding_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/playlist_bottom_menu_button_text_size</item>
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

</resources>